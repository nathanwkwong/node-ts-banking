{
  "name": "node-ts-banking",
  "version": "1.0.0",
  "description": "A bankend application using Typescript and Node.js to perform traditional bank transactions with ledger and security measurements.",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/app.ts",
    "build": "tsc --build",
    "start": "node dist/app.js",
    "test": "jest --silent",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./jest-e2e.json",
    "typeorm": "typeorm-ts-node-esm",
    "migrate:gen": "typeorm-ts-node-esm migration:generate src/migrations/migration -d src/config/database.ts",
    "migrate:up": "typeorm-ts-node-esm migration:run -d src/config/database.ts",
    "migrate:genUp": "npm run migrate:gen && npm run migrate:up",
    "migrate:revert": "typeorm-ts-node-esm migration:revert -d src/config/database.ts",
    "migrate:drop": "typeorm-ts-node-esm schema:drop -d src/config/database.ts && rm -R src/migrations"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nathanwkwong/node-ts-banking.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nathanwkwong/node-ts-banking/issues"
  },
  "homepage": "https://github.com/nathanwkwong/node-ts-banking#readme",
  "dependencies": {
    "@types/jest": "29.5.13",
    "dotenv": "16.4.5",
    "express": "4.21.1",
    "jest": "29.7.0",
    "pg": "8.13.0",
    "reflect-metadata": "0.2.2",
    "ts-jest": "29.2.5",
    "typeorm": "0.3.20"
  },
  "devDependencies": {
    "@types/express": "5.0.0",
    "@types/node": "22.7.5",
    "@types/supertest": "6.0.2",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.0.0",
    "husky": "9.1.6",
    "lint-staged": "15.2.10",
    "nodemon": "3.1.7",
    "prettier": "3.3.3",
    "supertest": "7.0.0",
    "ts-node": "10.9.2",
    "typescript": "5.6.3"
  }
}
