  "dependencies": {
    "@types/jest": "^29.5.13",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "jest": "^29.7.0",
    "pg": "^8.13.0",
    "reflect-metadata": "^0.2.2",
    "ts-jest": "^29.2.5",
    "typeorm": "^0.3.20"
  },
